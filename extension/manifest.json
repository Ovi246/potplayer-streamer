{
  "name": "PotPlayer Streamer",
  "author": "Ovi246",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Open video links in PotPlayer stream mode.",
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
